---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Solutions', href: '/projects' },
  { name: 'Team', href: '/team' },
  { name: 'Research', href: '/research' },
  { name: 'Contact', href: '/contact' },
];
---

<header class="bg-white/10 dark:bg-white/5 backdrop-blur-md shadow-sm sticky top-0 z-50 border-b border-white/10 dark:border-white/5">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center space-x-3">
          <img 
            src="/src/assets/Thera-AI-Logo-1.png" 
            alt="Ther-AI Logo"
            class="h-12 w-auto"
          />
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden lg:block">
        <div class="flex items-center space-x-1">
          {navItems.map((item) => (
            <a 
              href={item.href}
              class="text-white/90 dark:text-white/80 hover:text-white dark:hover:text-white px-4 py-2 text-sm font-medium transition-all duration-200 rounded-lg hover:bg-white/10 dark:hover:bg-white/5"
            >
              {item.name}
            </a>
          ))}
        </div>
      </div>
      
      <!-- Theme Toggle & CTA -->
      <div class="hidden lg:flex items-center space-x-4">
        <!-- Theme Toggle Button -->
        <button 
          onclick="toggleTheme()"
          class="p-2 rounded-lg bg-white/10 dark:bg-white/5 hover:bg-white/20 dark:hover:bg-white/10 transition-all duration-200"
          title="Toggle theme"
        >
          <svg class="w-5 h-5 text-white dark:text-white/80 theme-icon-light hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <svg class="w-5 h-5 text-white dark:text-white/80 theme-icon-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
          </svg>
        </button>
        
        <a 
          href="/demo"
          class="text-white/90 dark:text-white/80 hover:text-white dark:hover:text-white px-4 py-2 text-sm font-medium transition-colors duration-200"
        >
          Request Demo
        </a>
        <a 
          href="/contact"
          class="bg-gradient-to-r from-blue-500 to-purple-500 text-white px-6 py-3 rounded-xl text-sm font-semibold hover:from-blue-600 hover:to-purple-600 transition-all duration-200 shadow-lg hover:shadow-xl transform hover:-translate-y-0.5"
        >
          Get Started
        </a>
      </div>
      
      <!-- Mobile menu button -->
      <div class="lg:hidden flex items-center space-x-2">
        <!-- Mobile Theme Toggle -->
        <button 
          onclick="toggleTheme()"
          class="p-2 rounded-lg bg-white/10 dark:bg-white/5 hover:bg-white/20 dark:hover:bg-white/10 transition-all duration-200"
          title="Toggle theme"
        >
          <svg class="w-5 h-5 text-white dark:text-white/80 theme-icon-light hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <svg class="w-5 h-5 text-white dark:text-white/80 theme-icon-dark" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z" />
          </svg>
        </button>
        
        <button 
          type="button" 
          class="text-white/90 dark:text-white/80 hover:text-white dark:hover:text-white focus:outline-none p-2"
          id="mobile-menu-button"
        >
          <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile Navigation -->
    <div class="lg:hidden hidden" id="mobile-menu">
      <div class="px-2 pt-2 pb-6 space-y-1 bg-white/5 dark:bg-white/5 border-t border-white/10 dark:border-white/5">
        {navItems.map((item) => (
          <a 
            href={item.href}
            class="text-white/90 dark:text-white/80 hover:text-white dark:hover:text-white block px-4 py-3 text-base font-medium rounded-lg hover:bg-white/10 dark:hover:bg-white/5 transition-colors duration-200"
          >
            {item.name}
          </a>
        ))}
        <div class="pt-4 space-y-3">
          <a 
            href="/demo"
            class="text-blue-400 dark:text-blue-300 block px-4 py-3 text-base font-medium"
          >
            Request Demo
          </a>
          <a 
            href="/contact"
            class="bg-gradient-to-r from-blue-500 to-purple-500 text-white block px-4 py-3 text-base font-semibold rounded-lg text-center"
          >
            Get Started
          </a>
        </div>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', () => {
    const button = document.getElementById('mobile-menu-button');
    const menu = document.getElementById('mobile-menu');
    
    button?.addEventListener('click', () => {
      menu?.classList.toggle('hidden');
    });
    
    // Theme toggle icons
    function updateThemeIcons() {
      const theme = document.body.getAttribute('data-theme');
      const lightIcons = document.querySelectorAll('.theme-icon-light');
      const darkIcons = document.querySelectorAll('.theme-icon-dark');
      
      if (theme === 'light') {
        lightIcons.forEach(icon => icon.classList.remove('hidden'));
        darkIcons.forEach(icon => icon.classList.add('hidden'));
      } else {
        lightIcons.forEach(icon => icon.classList.add('hidden'));
        darkIcons.forEach(icon => icon.classList.remove('hidden'));
      }
    }
    
    // Initial icon update
    updateThemeIcons();
    
    // Listen for theme changes
    const observer = new MutationObserver(updateThemeIcons);
    observer.observe(document.body, { attributes: true, attributeFilter: ['data-theme'] });
  });
</script>