---
import TeamCard from '../ui/TeamCard.astro';
import teamData from '../../data/team.json';

const featuredTeam = teamData.teamMembers
  .filter(member => member.featured && member.active)
  .sort((a, b) => a.order - b.order)
  .slice(0, 3);
---

<section class="py-24 bg-[#0D0B26] dark:bg-[#0D0B26] light:bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-20">
      <div class="inline-block bg-purple-500/20 dark:bg-purple-500/20 light:bg-purple-100 text-purple-300 dark:text-purple-300 light:text-purple-800 px-4 py-2 rounded-full text-sm font-semibold mb-6 backdrop-blur-sm border border-purple-500/30 dark:border-purple-500/30 light:border-purple-200">
        ðŸ‘¥ World-Class Experts
      </div>
      <h2 class="text-4xl md:text-5xl font-bold text-white dark:text-white light:text-gray-900 mb-6">
        Meet Our Expert Team
      </h2>
      <p class="text-xl text-gray-300 dark:text-gray-300 light:text-gray-600 max-w-4xl mx-auto leading-relaxed">
        World-renowned researchers, engineers, and healthcare professionals working together 
        to revolutionize healthcare through artificial intelligence and machine learning.
      </p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 mb-16">
      {featuredTeam.map((member, index) => (
        <div class="animate-fade-in" style={`animation-delay: ${index * 0.2}s`}>
          <TeamCard 
            name={member.name}
            position={member.position}
            department={member.department}
            bio={member.bio}
            avatar={member.avatar}
            specialties={member.specialties}
            email={member.email}
            socialMedia={member.socialMedia}
          />
        </div>
      ))}
    </div>
    
    <!-- Team Stats -->
    <div class="bg-gradient-to-r from-blue-500/10 to-purple-500/10 dark:from-blue-500/10 dark:to-purple-500/10 light:from-blue-50 light:to-purple-50 rounded-3xl p-12 backdrop-blur-sm border border-white/10 dark:border-white/10 light:border-blue-200">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
        <div>
          <div class="text-4xl font-bold text-blue-400 dark:text-blue-400 light:text-blue-600 mb-2">25+</div>
          <div class="text-gray-300 dark:text-gray-300 light:text-gray-700 font-medium">AI Researchers</div>
          <div class="text-sm text-gray-400 dark:text-gray-400 light:text-gray-500 mt-1">PhD & MD experts</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-purple-400 dark:text-purple-400 light:text-purple-600 mb-2">100+</div>
          <div class="text-gray-300 dark:text-gray-300 light:text-gray-700 font-medium">Publications</div>
          <div class="text-sm text-gray-400 dark:text-gray-400 light:text-gray-500 mt-1">Peer-reviewed research</div>
        </div>
        <div>
          <div class="text-4xl font-bold text-green-400 dark:text-green-400 light:text-green-600 mb-2">15+</div>
          <div class="text-gray-300 dark:text-gray-300 light:text-gray-700 font-medium">Years Experience</div>
          <div class="text-sm text-gray-400 dark:text-gray-400 light:text-gray-500 mt-1">Average team expertise</div>
        </div>
      </div>
    </div>
    
    <div class="text-center mt-12">
      <a 
        href="/team"
        class="bg-gradient-to-r from-blue-500 to-purple-500 text-white px-8 py-4 rounded-xl font-semibold text-lg hover:from-blue-600 hover:to-purple-600 transition-all duration-300 inline-flex items-center shadow-lg hover:shadow-xl transform hover:-translate-y-1"
      >
        Meet Full Team
        <svg class="w-5 h-5 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>