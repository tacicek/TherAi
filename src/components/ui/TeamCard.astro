---
export interface Props {
  name: string;
  position: string;
  department: string;
  bio: string;
  avatar: string;
  email: string;
  specialties: string[];
  socialMedia: {
    linkedin?: string;
    instagram?: string;
    facebook?: string;
    twitter?: string;
  };
}

const { name, position, department, bio, avatar, email, specialties, socialMedia } = Astro.props;
---

<div class="group bg-white/5 dark:bg-white/5 light:bg-white rounded-3xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-500 transform hover:-translate-y-2 border border-white/10 dark:border-white/10 light:border-gray-100 backdrop-blur-sm">
  <div class="aspect-square overflow-hidden relative">
    <img 
      src={avatar} 
      alt={name}
      class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
      loading="lazy"
    />
    <div class="absolute inset-0 bg-gradient-to-t from-black/50 via-transparent to-transparent opacity-60 group-hover:opacity-80 transition-opacity duration-300"></div>
    
    <!-- Social Links Overlay -->
    <div class="absolute bottom-4 left-4 right-4 flex justify-center space-x-3 opacity-0 group-hover:opacity-100 transition-all duration-300 transform translate-y-4 group-hover:translate-y-0">
      <a 
        href={`mailto:${email}`}
        class="bg-white/20 backdrop-blur-sm text-white p-2 rounded-lg hover:bg-white/30 transition-colors duration-200 border border-white/30"
        title="Email"
      >
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
          <path d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6zm-2 0l-8 5-8-5h16zm0 12H4V8l8 5 8-5v10z"/>
        </svg>
      </a>
      {socialMedia.linkedin && (
        <a 
          href={socialMedia.linkedin}
          target="_blank"
          class="bg-white/20 backdrop-blur-sm text-white p-2 rounded-lg hover:bg-white/30 transition-colors duration-200 border border-white/30"
          title="LinkedIn"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
          </svg>
        </a>
      )}
      {socialMedia.instagram && (
        <a 
          href={socialMedia.instagram}
          target="_blank"
          class="bg-white/20 backdrop-blur-sm text-white p-2 rounded-lg hover:bg-white/30 transition-colors duration-200 border border-white/30"
          title="Instagram"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
          </svg>
        </a>
      )}
      {socialMedia.facebook && (
        <a 
          href={socialMedia.facebook}
          target="_blank"
          class="bg-white/20 backdrop-blur-sm text-white p-2 rounded-lg hover:bg-white/30 transition-colors duration-200 border border-white/30"
          title="Facebook"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
          </svg>
        </a>
      )}
      {socialMedia.twitter && (
        <a 
          href={socialMedia.twitter}
          target="_blank"
          class="bg-white/20 backdrop-blur-sm text-white p-2 rounded-lg hover:bg-white/30 transition-colors duration-200 border border-white/30"
          title="Twitter/X"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
            <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
          </svg>
        </a>
      )}
    </div>
  </div>
  
  <div class="p-8">
    <div class="mb-4">
      <h3 class="text-xl font-bold text-black group-hover:text-blue-600 transition-colors duration-300">{name}</h3>
      <p class="text-blue-400 dark:text-blue-400 light:text-blue-600 font-semibold text-lg">{position}</p>
      <p class="text-sm text-gray-400 dark:text-gray-400 light:text-gray-500 font-medium">{department} Department</p>
    </div>
    
    <p class="text-black text-sm mb-6 leading-relaxed line-clamp-3">{bio}</p>
    
    <!-- Specialties -->
    <div class="mb-6">
      <h4 class="text-sm font-semibold text-gray-300 dark:text-gray-300 light:text-gray-700 mb-3">Specialties</h4>
      <div class="flex flex-wrap gap-2">
        {specialties.slice(0, 3).map((specialty) => (
          <span class="bg-blue-500/20 dark:bg-blue-500/20 light:bg-blue-50 text-blue-300 dark:text-blue-300 light:text-blue-700 px-3 py-1 rounded-lg text-xs font-medium border border-blue-500/30 dark:border-blue-500/30 light:border-blue-100 backdrop-blur-sm">
            {specialty}
          </span>
        ))}
        {specialties.length > 3 && (
          <span class="text-gray-400 dark:text-gray-400 light:text-gray-500 text-xs px-3 py-1 font-medium">
            +{specialties.length - 3} more
          </span>
        )}
      </div>
    </div>
    
    <!-- Contact Button -->
    <button class="w-full bg-gradient-to-r from-blue-500 to-purple-500 text-white py-3 rounded-xl font-semibold hover:from-blue-600 hover:to-purple-600 transition-all duration-300 transform hover:scale-105">
      Connect
    </button>
  </div>
</div>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>