---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/layout/Header.astro';
import Footer from '../../components/layout/Footer.astro';
import teamData from '../../data/team.json';

export function getStaticPaths() {
  return teamData.teamMembers.map((member) => ({
    params: { slug: member.id },
    props: { member },
  }));
}

const { member } = Astro.props;
---

<Layout 
  title={`${member.name} - Ther-AI Team`}
  description={`Learn more about ${member.name}, ${member.position} at Ther-AI. ${member.bio.substring(0, 150)}...`}
>
  <Header />
  <main>
    <!-- Hero Section -->
    <section class="bg-gradient-to-br from-[#0D0B26] via-[#1a1640] to-[#0D0B26] light:from-gray-50 light:to-blue-50 py-20">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <!-- Profile Image -->
          <div class="relative">
            <div class="aspect-square overflow-hidden rounded-3xl shadow-2xl">
              <img 
                src={member.avatar} 
                alt={member.name}
                class="w-full h-full object-cover"
                loading="eager"
              />
            </div>
            
            <!-- Floating Elements -->
            <div class="absolute -top-6 -right-6 bg-blue-500/20 backdrop-blur-sm rounded-2xl p-4 border border-blue-500/30">
              <div class="text-sm text-blue-300 light:text-blue-700 dark:text-blue-300">
                <span class="font-bold">{member.department}</span> Dept.
              </div>
            </div>
          </div>
          
          <!-- Basic Info -->
          <div class="space-y-6">
            <div>
              <h1 class="text-4xl md:text-5xl font-bold text-white light:text-gray-900 mb-4">
                {member.name}
              </h1>
              <p class="text-xl text-blue-400 light:text-blue-600 font-semibold mb-2">
                {member.position}
              </p>
              <p class="text-lg text-gray-300 light:text-gray-600">
                {member.department} Department
              </p>
            </div>
            
            <!-- Contact Info -->
            <div class="space-y-4">
              <a 
                href={`mailto:${member.email}`}
                class="flex items-center space-x-3 text-gray-300 light:text-gray-600 hover:text-white light:hover:text-blue-600 transition-colors duration-200"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6zm-2 0l-8 5-8-5h16zm0 12H4V8l8 5 8-5v10z"/>
                </svg>
                <span>{member.email}</span>
              </a>
              
              {member.socialMedia.linkedin && (
                <a 
                  href={member.socialMedia.linkedin}
                  target="_blank"
                  class="flex items-center space-x-3 text-gray-300 light:text-gray-600 hover:text-white light:hover:text-blue-600 transition-colors duration-200"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                  <span>LinkedIn Profile</span>
                </a>
              )}
            </div>
            
            <!-- Social Media Links -->
            <div class="flex space-x-4">
              <a 
                href={`mailto:${member.email}`}
                class="bg-white/10 light:bg-blue-100 text-white light:text-blue-600 p-3 rounded-xl hover:bg-white/20 light:hover:bg-blue-200 transition-colors duration-200"
                title="Email"
              >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M22 6c0-1.1-.9-2-2-2H4c-1.1 0-2 .9-2 2v12c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6zm-2 0l-8 5-8-5h16zm0 12H4V8l8 5 8-5v10z"/>
                </svg>
              </a>
              {member.socialMedia.linkedin && (
                <a 
                  href={member.socialMedia.linkedin}
                  target="_blank"
                  class="bg-white/10 light:bg-blue-100 text-white light:text-blue-600 p-3 rounded-xl hover:bg-white/20 light:hover:bg-blue-200 transition-colors duration-200"
                  title="LinkedIn"
                >
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              )}
            </div>
          </div>
        </div>
      </div>
    </section>
    
    <!-- Detailed Bio Section -->
    <section class="py-20 bg-white light:bg-gray-50 dark:bg-[#1a1640]">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="space-y-8">
          <!-- Bio -->
          <div>
            <h2 class="text-3xl font-bold text-gray-900 light:text-gray-900 dark:text-white mb-6">About {member.name}</h2>
            <div class="prose prose-lg max-w-none">
              <p class="text-gray-700 light:text-gray-700 dark:text-gray-300 leading-relaxed text-lg">
                {member.bio}
              </p>
            </div>
          </div>
          
          <!-- Specialties -->
          <div>
            <h3 class="text-2xl font-bold text-gray-900 light:text-gray-900 dark:text-white mb-6">Areas of Expertise</h3>
            <div class="flex flex-wrap gap-3">
              {member.specialties.map((specialty) => (
                <span class="bg-blue-100 light:bg-blue-100 dark:bg-blue-500/20 text-blue-800 light:text-blue-800 dark:text-blue-300 px-4 py-2 rounded-xl font-medium border border-blue-200 light:border-blue-200 dark:border-blue-500/30">
                  {specialty}
                </span>
              ))}
            </div>
          </div>
          
          <!-- Contact Section -->
          <div class="bg-gradient-to-r from-blue-50 to-purple-50 light:from-blue-50 light:to-purple-50 dark:from-blue-500/10 dark:to-purple-500/10 rounded-2xl p-8 border border-blue-200 light:border-blue-200 dark:border-blue-500/30">
            <h3 class="text-2xl font-bold text-gray-900 light:text-gray-900 dark:text-white mb-4">Get in Touch</h3>
            <p class="text-gray-600 light:text-gray-600 dark:text-gray-300 mb-6">
              Interested in collaborating or learning more about {member.name.split(' ')[1]}'s work? 
              Feel free to reach out directly.
            </p>
            <a 
              href={`mailto:${member.email}?subject=Inquiry about ${member.name}&body=Hello ${member.name},%0D%0A%0D%0AI would like to learn more about your work at Ther-AI.%0D%0A%0D%0ABest regards`}
              class="bg-gradient-to-r from-blue-500 to-purple-500 text-white px-8 py-4 rounded-xl font-semibold hover:from-blue-600 hover:to-purple-600 transition-all duration-300 inline-flex items-center shadow-lg hover:shadow-xl transform hover:-translate-y-1"
            >
              Send Email
              <svg class="w-5 h-5 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>